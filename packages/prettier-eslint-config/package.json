{
	"name": "@repo/prettier-eslint-config",
	"version": "0.0.0",
	"private": true,
	"files": [
		".prettierignore",
		".prettierrc.json",
		"eslint.config.js"
	],
	"scripts": {
		"test:linter": "echo \"$npm_config_local_prefix\"",
		"lint": "prettier --check \"$npm_config_local_prefix\" && eslint \"$npm_config_local_prefix\"",
		"lint:fix": "prettier --write \"$npm_config_local_prefix\" && eslint \"$npm_config_local_prefix\" --fix"
	},
	"devDependencies": {
		"@types/eslint": "^8.56.7",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/eslint__js": "^8.42.3",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.39.5",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.6.4",
		"typescript": "^5.0.4",
		"typescript-eslint": "^8.0.0-alpha.20"
	},
	"publishConfig": {
		"access": "public"
	}
}
